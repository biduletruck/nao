
{% trans_default_domain 'FOSUserBundle' %}
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="form fos_user_resetting_request">
                <div class="form-group">
                    <label class="control-label" for="username">{{ 'resetting.request.username'|trans }}</label>
                    <input class="form-control" type="text" id="username" name="username" placeholder="Indiquer votre adresse email" required="required" />
                </div>

                <div class="form-group">
                    <input class="btn btn-danger blanc" type="submit" value="{{ 'resetting.request.submit'|trans }}" />
                </div>
            </form>
        </div>
    </div>
</div>