{% trans_default_domain 'FOSUserBundle' %}
<div>
{% if is_granted('ROLE_ADMIN') %}
        <a class="btn btn-herbe-tropicale blanc" href="{{ path('admin_utilisateurs_index') }}">Administration</a>
{% endif %}

{% if is_granted('ROLE_NATURALISTE') or is_granted('ROLE_ADMIN') %}
        <a class="btn btn-pin-glacial blanc" href="{{ path('observation_index') }}">Observations</a>
{% endif %}
    </div>

    <div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <img src="{{asset('profil/'~ user.imageName)}}" alt="people" class="img-circle img-responsive center-block" height="240">
            </div>
            <div class="panel-body">
                <div class="col-xs-6 col-md-6">
                    <div class="form-group">{{ 'Pr√©nom'|trans }}: {{ user.firstname }} <a href="{{path('fos_user_profile_edit') }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></div>
                </div>
                <div class="col-xs-6 col-md-6">
                    <div class="form-group">{{ 'Nom'|trans }}: {{ user.lastname }} <a href="{{path('fos_user_profile_edit') }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></div>
                </div>
                <div class="col-xs-12 col-md-6">
                    <div class="form-group">{{ 'profile.show.username' |trans }}: {{ user.username }} <a href="{{path('fos_user_profile_edit') }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></div>
                </div>
                <div class="col-xs-12 col-md-12">
                    <div class="form-group">{{ 'profile.show.email'|trans }}: {{ user.email }} <a href="{{path('fos_user_profile_edit') }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></div>
                </div>
                <div class="col-xs-12 col-md-12">
                    <div class="form-group">{{ 'Mot de passe'|trans }}: <a href="{{path('fos_user_change_password') }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></div>
                </div>
                {% if is_granted('ROLE_ADMIN') %}
                <div class="col-xs-12 col-md-12">
                    <div class="form-group">
                        {{ 'Position' }}: <a href="{{path('fos_user_profile_edit') }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                            {% for role in user.roles %}
                                <ul>
                                    <li>
                                        {{ role }}
                                    </li>
                                </ul>
                            {% endfor %}
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    </div>

