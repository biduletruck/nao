{%  extends "::base.html.twig" %}

{% block body %}
    <div id="contact">
        <div class="container">
            <div class="row" id="contact-form">
                <div class="col-xs-12 col-md-6 col-md-offset-3 text-center">
                    <h2 class="text-uppercase pin-glacial">contact</h2>
                    {{ form_start(form) }}
                    <div class="col-xs-12 col-md-6 form-group">
                        {{ form_widget(form.prenom) }}
                        {{ form_errors(form.prenom) }}
                    </div>
                    <div class="col-xs-12 col-md-6 form-group">
                        {{ form_widget(form.nom) }}
                        {{ form_errors(form.nom) }}
                    </div>
                    <div class="form-group col-xs-12 col-md-12">
                        {{ form_widget(form.email) }}
                        {{ form_errors(form.email) }}
                    </div>
                    <div class="form-group col-xs-12 col-md-12">
                        {{ form_widget(form.sujet) }}
                        {{ form_errors(form.sujet) }}
                    </div>
                    <div class="form-group col-xs-12 col-md-12">
                        {{ form_widget(form.message) }}
                        {{ form_errors(form.message) }}
                    </div>
                    {# Render CSRF token etc .#}
                    <div style="display:none">
                        {{ form_rest(form) }}
                    </div>
                    <div class="form-group col-xs-12 col-md-12">
                        <div class="g-recaptcha" data-sitekey="6LdOQiIUAAAAAOvCV19AXUYhV4TfE-JoR8A_2MNM"></div>
                    </div>
                    <div class="form-group col-xs-12 col-md-12 text-center">
                        <input type="submit" class="btn btn-primary" value="Envoyer">
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src='https://www.google.com/recaptcha/api.js'></script>
    <script src="{{ asset('js/contact.js') }}"></script>
{% endblock %}
