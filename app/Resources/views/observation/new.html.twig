                <div class="row text-center">
                    <div class="col-xs-offset-1 col-xs-10">
                        {{ form_start(form, {'attr': {'class': 'text-center'}}) }}
                        {{ form_widget(form) }}
                        <div class="row" id="boutons-observation-2">
                            <a class="btn btn-pin-glacial text-uppercase blanc" id="indiquer">
                                cliquer la carte
                            </a>
                            <a class="btn btn-pin-glacial text-uppercase blanc" id="geolocaliser">
                                me g√©olocaliser
                            </a>
                        </div>
                        <button type="submit" class="btn btn-block btn-pin-glacial text-uppercase blanc">
                            soumettre mon
                            <br class="visible-xs">
                            observation
                        </button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-md-6 padding-null" id="carte-new-observation"></div>
        </div>
        <br>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://unpkg.com/leaflet@1.0.3/dist/leaflet.js" integrity="sha512-A7vV8IFfih/D732iSSKi20u/ooOfj/AGehOKq0f4vLT1Zr2Y+RX7C+w8A1gaSasGtRUZpF/NZgzSAu4/Gc41Lg==" crossorigin=""></script>
