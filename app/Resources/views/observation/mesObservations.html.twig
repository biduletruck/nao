{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Observations list</h1>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Date</th>
                    <th>Latitude</th>
                    <th>Longitude</th>
                    <th>Image</th>
                    <th>Statut</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for observation in observations %}
                    <tr>
                        <td><a href="{{ path('observation_show', { 'id': observation.id }) }}">{{ observation.id }}</a></td>
                        <td>{% if observation.date %}{{ observation.date|date('Y-m-d') }}{% endif %}</td>
                        <td>{{ observation.latitude }}</td>
                        <td>{{ observation.longitude }}</td>

                        <td>
                            {%   if observation.image is defined and observation.image is not null%}
                                <img src="{{ asset('/img_uppload/'~ observation.image) | imagine_filter('sm_thumb')}}" alt=""
                                />
                            {% else %}
                                <em>Aucune photo proposée</em>
                            {% endif %}
                        </td>
                        <td>{% if observation.active %}Validée{% else %}En attente{% endif %}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('observation_show', { 'id': observation.id }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('observation_validate', { 'id': observation.id }) }}">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>


        <ul>
            <li>
                <a href="{{ path('observation_new') }}">Create a new observation</a>
            </li>
        </ul>
        <div class="row">
            <!-- tabs left -->
            <div class="tabbable tabs-left">
                <ul class="nav nav-tabs">
                    <li><a href="#a" data-toggle="tab">Nombre D'observations</a></li>
                    {% if is_granted('ROLE_USER') %}
                    <li class="active"><a href="#b" data-toggle="tab">Observation validées</a></li>
                    <li><a href="#c" data-toggle="tab">En attente de validation</a></li>
                    {% endif %}
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active" id="a">
                        {% if userObservations is empty %}
                        <div class="alert alert-danger center">Aucune observation</div>
                        {% endif %}
                        {% for userObservation in userObservations %}
                        <a href="">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="block">
                                        <div class="row">
                                            <div class="col-xs-4 col-md-6 col-lg-5">
                                                {% if userObservation.image %}
                                                <img src="{{ asset('img_uppload') ~ '/' ~ userObservation.image }}" alt="">
                                                {% else %}
                                                <p>Aucune image</p>
                                                {% endif %}
                                            </div>
                                            <div class="description col-xs-8 col-md-6 col-lg-7">
                                                <h3></h3>
                                                <h3></h3>
                                                <p></p>
                                                <p></p>
                                                <p></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="tab-pane" id="b">
                        {% if userObservationsValidate is empty %}
                            <div class="alert alert-danger center">Aucune observation validée</div>
                        {% endif %}
                        {% for userObservation in userObservationsValidate %}
                        <a href="">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="block">
                                        <div class="row">
                                            <div class="col-xs-4 col-md-6 col-lg-5">
                                                {% if userObservation.image %}
                                                    <img src="{{ asset('img_uppload') ~ '/' ~ userObservation.image }}" alt="">
                                                {% else %}
                                                    <p>Aucune image</p>
                                                {% endif %}
                                            </div>
                                            <div class="description col-xs-8 col-md-6 col-lg-7">
                                                <h3></h3>
                                                <h3></h3>
                                                <p></p>
                                                <p></p>
                                                <p></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="tab-pane" id="c">
                        {% if userObservationsWaiting is empty %}
                            <div class="alert alert-danger center">Aucune observation</div>
                        {% endif %}
                        {% for userObservation in userObservationsWaiting %}
                        <a href="">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="block">
                                        <div class="row">
                                            <div class="col-xs-4 col-md-6 col-lg-5">
                                                {% if userObservation.image %}
                                                    <img src="{{ asset('img_uppload') ~ '/' ~ userObservation.image }}" alt="">
                                                {% else %}
                                                    <p>Aucune image</p>
                                                {% endif %}
                                            </div>
                                            <div class="description col-xs-8 col-md-6 col-lg-7">
                                                <h3></h3>
                                                <h3></h3>
                                                <p></p>
                                                <p></p>
                                                <p></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
            <!-- /tabs -->
        </div>




    </div>

{% endblock %}
