{% extends 'base.html.twig' %}

{% block body %}
    <h1>Utilisateur {{ user.username }}</h1>


    <div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <img src="http://lorempixel.com/300/300/people/" alt="people" class="img-circle img-responsive center-block" height="240">
            </div>
            <div class="panel-body">
                <div class="col-xs-6 col-md-6">
                    <div class="form-group">{{ 'Prénom'|trans }}: {{ user.firstname }} <a href="edit"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></div>
                </div>
                <div class="col-xs-6 col-md-6">
                    <div class="form-group">{{ 'Nom'|trans }}: {{ user.lastname }} <a href="edit"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></div>
                </div>
                <div class="col-xs-12 col-md-6">
                    <div class="form-group">{{ 'Login'|trans }}: {{ user.username }} <a href="edit"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></div>
                </div>
                <div class="col-xs-12 col-md-12">
                    <div class="form-group">{{ 'Adresse email'|trans }}: {{ user.email }} <a href="edit"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></div>
                </div>
                <div class="col-xs-12 col-md-12">
                    <div class="form-group">{{ 'Position' }}: {% for role in user.roles %} {{ role }} {% endfor %}<a href="edit"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></div>
                </div>
            </div>
        </div>
    </div>
    <div>
        <a href="{{ path('admin_utilisateurs_index') }}" class="btn btn-herbe-tropicale blanc">Retour à la liste</a>
        <a href="{{ path('admin_utilisateurs_index', { 'id': user.id }) }}" class="btn btn-pin-glacial blanc">Modifier</a>
        {{ form_start(delete_form) }}
        <button type="submit" class="btn btn-danger blanc">Supprimer</button>
        {{ form_end(delete_form) }}
    </div>

{% endblock %}
