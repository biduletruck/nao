<h1>Liste des utilisateurs</h1>

<div id="recherche">
    <form method="post" action="recherche_utilisateur">
        <input type="text" class="" placeholder="Rechercher...">
        <button type="submit">Rechercher</button>
    </form>
</div>

<div id="filtre">
    <form method="post" action="utilisateurs/">
        <label for="role">Filtrer</label>
        <select name="role" id="role">
            <option value="*">tout afficher</option>
            <option value="ROLE_USER">Particulier</option>
            <option value="ROLE_NATURALISTE">Naturaliste</option>
            <option value="ROLE_ADMIN">Adinistrateur</option>
        </select>
        <button type="submit">valider</button>
    </form>
</div>

<div>
    {% for user in users %}
        <ul>
            <li>
                {{ user.lastname|e }} {{ user.firstname|e }} ( {{ user.username|e }} )
                <ul>
                    <li>{{ user.email }} <a href="">modifier</a></li>
                </ul>
            </li>
        </ul>
    {% endfor %}
</div>
