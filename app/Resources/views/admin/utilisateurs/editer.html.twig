{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/forest.css') }}">
    <link rel="stylesheet" href="{{ asset('css/navbar-transparente.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row rad bg-herbe-tropicale pin-glacial">
            <div class="col-xs-12 padding-30">
                <div class="col-xs-12 text-center text-uppercase">
                    <h1>Modifier un profil utilisateur</h1>
                </div>
                <div class="col-xs-12">
                    {{ form_start(edit_form) }}
                    {{ form_widget(edit_form) }}
                    <button type="submit" class="btn btn-block btn-warning text-uppercase blanc">Mettre à jour</button>
                    {{ form_end(edit_form) }}
                </div>
                <div class="col-xs-12">
                    <br>
                    <a class="btn btn-block btn-pin-glacial text-uppercase blanc" href="{{ path('nao_dashboard') }}">Retour à la liste</a>
                </div>
                <div class="col-xs-12">
                    <br>
                    {{ form_start(delete_form) }}
                    <button type="submit" class="btn btn-block btn-danger text-uppercase blanc">Supprimer</button>
                    {{ form_end(delete_form) }}
                </div>
            </div>
        </div>
        <br>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/editer.js') }}"></script>
    <script src="{{ asset('js/documentSize.js') }}"></script>
{% endblock %}
