{% extends 'base.html.twig' %}

{% block body %}

    <h1 class="herbe-tropicale">Liste des utilisateurs</h1>

    <div class="row">
        <div class="col-sm-12">
            <div class="form-group">
                {{ render(controller('UserBundle:Default:recherche')) }}
            </div>

            <div class="form-group">
                {{ render(controller('UserBundle:Default:rechercheRole')) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            {% for user in users %}
                <div class="panel panel-default">
                    <div class="panel-body">
                        <p class="herbe-tropicale">
                            {{ user.lastname }} {{ user.firstname }} ( {{ user.username }} )
                        </p>
                        <em>
                            {{ user.email }}
                            <a href="{{ path('admin_utilisateurs_edit', { 'id': user.id }) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                        </em>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <a class="btn btn-herbe-tropicale blanc" href="{{ path('admin_utilisateurs_new') }}">Ajouter un utilisateur</a>
        </div>
    </div>




{% endblock %}
